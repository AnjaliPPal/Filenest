# Subscription Tiers
FREE_TIER_MAX_REQUESTS=100
FREE_TIER_STORAGE_LIMIT_MB=1000
FREE_TIER_EXPIRY_DAYS=30
PAID_TIER_MAX_REQUESTS=10000
PAID_TIER_STORAGE_LIMIT_MB=10000
